<div class="container mt-5">
  <h2 class="text-center text-primary font-weight-bold">Update User</h2>
  <form class="row g-3 mt-1 bg-white p-4 border rounded shadow" action="/admin/editUser/{{data._id}}" method="post">
    <div class="col-md-6">
      <label for="inputName" class="form-label text-secondary font-weight-bold">Full Name</label>
      <input type="text" name="fullName" value="{{data.fullName}}" class="form-control" id="inputName">
    </div>
    <div class="col-md-6">
      <label for="inputPhone" class="form-label text-secondary font-weight-bold">Phone</label>
      <input type="text" name="phone" class="form-control" value="{{data.phone}}" id="inputPhone">
    </div>
    <div class="col-md-6">
      <label for="inputEmail4" class="form-label text-secondary font-weight-bold">Email</label>
      <input type="email" name="email" class="form-control" value="{{data.email}}" id="inputEmail4">
    </div>
    <div class="col-md-6">
      <label for="inputGender" class="form-label text-secondary font-weight-bold">Gender</label>
      <input type="text" name="gender" class="form-control" value="{{data.gender}}" id="inputGender">
    </div>
    <div class="col-12">
      <a href="/admin">
        <button class="btn btn-outline-secondary font-weight-bold">Cancel</button>
      </a>
      <button type="submit" class="btn btn-primary font-weight-bold">Update</button>
    </div>
  </form>
  <hr class="bg-primary">
</div>